<main class="contenedor">
    <form action="/iniciarSesion" method="POST" class="default-form">
        <div class="campo">
            <label>Email</label>
            <input type="email" name="email" placeholder="Tu email">
        </div>
        <div class="campo">
            <label>Password</label>
            <input type="password" name="password" placeholder="Tu password">
        </div>
        <div class="campo acciones">
            <a href="/crearCuenta">Crear una cuenta</a>
            <a href="/restablecerPassword">Olvidé mi password</a>
        </div>
        <div class="campo">
            <input type="submit" value="Iniciar sesión" class="btn btn-azul">
        </div>
    </form>
</main>